              <material name="Hide" />
        </visual>
        <collision>
            <origin xyz=" 0 0 -0.02"  rpy="0 0 0"/>
            <geometry>
                <box size="20 20 0.02" />
            </geometry>
        </collision>
        <xacro:inertial_matrix mass="1000"/>
